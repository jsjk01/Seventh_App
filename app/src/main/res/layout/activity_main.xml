<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:text="输入密码"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/first_password_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/unclickable"/>
            <ImageView
                android:id="@+id/second_password_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/unclickable"/>
            <ImageView
                android:id="@+id/third_password_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/unclickable"/>
            <ImageView
                android:id="@+id/forth_password_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/unclickable"/>
            <ImageView
                android:id="@+id/fifth_password_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/unclickable"/>
            <ImageView
                android:id="@+id/sixth_password_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unclickable"/>
        </LinearLayout>

        <GridView

            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:id="@+id/password_pad"
            android:verticalSpacing="40dp"
            />

    </LinearLayout>



</RelativeLayout>